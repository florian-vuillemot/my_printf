int		print_float(char *str, int *cursor, va_list list)
{
  float		nb;
  int		integer;
  int		mult;

  mult = 1;
  nb = va_arg(list, float);
  integer = (int)nb;
  my_putnbr(integer);
  my_putchar('.');
  while (nb * mult - integer)
    {
      my_putchar(nb * 10 + '0');
      mult = mult * 10;
      integer = nb * 10;
    }
  return (1);
}
